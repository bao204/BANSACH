@model GioHang
<!DOCTYPE html>
<html lang="en">

<head>
	<title>BookSaw - Free Book Store HTML CSS Template</title>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="format-detection" content="telephone=no">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="author" content="">
	<meta name="keywords" content="">
	<meta name="description" content="">

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/~/shop/css/bootstrap.min.css" rel="stylesheet"
		  integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

	<link rel="stylesheet" type="text/css" href="~/shop/css/normalize.css">
	<link rel="stylesheet" type="text/css" href="~/shop/icomoon/icomoon.css">
	<link rel="stylesheet" type="text/css" href="~/shop/css/vendor.css">
@* 	<link rel="stylesheet" type="text/css" href="~/shop/style.css"> *@

</head>
<style>


    input[type="number"] {
        width: 60px; /* Set the desired width */
        padding: 8px; /* Adjust padding for better appearance */
        font-size: 14px; /* Set the font size */
        border: 1px solid #ccc; /* Add a border */
        border-radius: 4px; /* Add border radius for rounded corners */
        margin-right: 10px; /* Adjust spacing as needed */
    }

    /* Optional: Style for the button */
    .btn-accent-arrow {
        /* Add your button styling here */
        background-color: #3498db;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
        /* Add other styles as needed */
    }

    /* Optional: Style for the icon inside the button */
    .icon-ns-arrow-right {
        /* Add your icon styling here */
        margin-left: 5px; /* Adjust spacing between text and icon */
    }

    #best-selling {
        background: #EDEBE4;
        padding: 120px 0;
    }

        #best-selling .products-thumb {
            margin-right: 60px;
            box-shadow: 2px 6px 34px 4px rgba(63, 63, 63, 0.08);
        }

        #best-selling .product-entry {
            margin-top: 50px;
        }

            #best-selling .product-entry h3.item-title {
                font-size: 1.8em;
                font-weight: 100;
                margin-top: 15px;
            }

            #best-selling .product-entry .item-price {
                font-size: 1.5em;
                color: #74642F;
                margin-bottom: 40px;
            }

    #quotation .section-title.divider,
    #quotation .section-title.divider:after {
        margin: 0 auto;
    }

    .product-item .item-price {
        color: #74642F;
        font-size: 1.3em;
    }

    .row::after,
    .clearfix::after {
        display: block;
        clear: both;
        content: "";
    }

    .corner-pattern-overlay {
        background-image: url(shop/images/pattern2.png);
        background-repeat: no-repeat;
        background-position: top right;
    }


    .col-md-6 {
        width: 50%;
        float: left;
        margin-bottom: 20px;
        transition: transform 0.3s ease-in-out; /* Add a subtle transition effect */
    }

        .col-md-6:hover {
            transform: scale(1.02); /* Slightly scale up on hover for a subtle effect */
        }

    .product-entry {
        border: 1px solid #ddd;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .section-title {
        color: #74642F;
        font-size: 36px;
        margin-bottom: 15px;
        border-bottom: 3px solid #27AE60;
        padding-bottom: 10px;
    }

    .category-name {
        color: #555;
        font-style: italic;
        margin-bottom: 15px;
    }

    .item-title {
        color: #333;
        font-size: 28px;
        margin-bottom: 15px;
    }

    .products-content p {
        color: #666;
        line-height: 1.6;
        margin-bottom: 20px;
    }

    .item-price {
        color: #27AE60;
        font-size: 32px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .btn-wrap {
        margin-top: 20px;
    }

    .btn-accent-arrow {
        background-color: #2c8337;
        color: #fff;
        padding: 15px 25px;
        border: none;
        cursor: pointer;
        border-radius: 8px;
        transition: background-color 0.3s ease-in-out;
    }

        .btn-accent-arrow:hover {
            background-color: #1d5f23;
        }

    .featured .featured-slider .box .content .price span {
        font-size: 1.5rem;
        color: var(--light-color);
        text-decoration: none;
    }
</style>
<body data-bs-spy="scroll" data-bs-target="#header" tabindex="0">



    <section id="best-selling" class="leaf-pattern-overlay">
        <div class="corner-pattern-overlay"></div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-6">
                            <figure class="products-thumb">
                                <img src="/images/@Model.SanPham.ImageUrl" alt="Book Image" class="img-fluid">
                            </figure>
                        </div>

                        <div class="col-md-6">
                            <div class="product-entry">
                                <h2 class="section-title divider">@Model.SanPham.Name</h2>

                                <div class="products-content">
                                    <div class="author-info">
                                        <div class="category-name">Category: @Model.SanPham?.TheLoai?.Name</div>
                                    </div>
                                    <h3 class="item-title">Tác giả: @Model.SanPham.Author</h3>
                                    <p>@Model.SanPham.Description</p>
                                    <div class="item-price"><span>Price: </span>@String.Format("{0:0,0}",Model.SanPham.Price) VND</div>
                                    <div class="btn-wrap">
                                        <form method="post">
                                            <input asp-for="Quantity" value="@Model.Quantity" type="number">
                                            <button type="submit" class="btn-accent-arrow">
                                                Add to cart <i class="icon icon-ns-arrow-right"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div> <!-- /row -->
                </div>
            </div>
        </div>
    </section>
    <section class="featured" id="featured">

        <h1 class="heading"> <span>sách nổi bật</span> </h1>

        <div class="swiper featured-slider">

            <div class="swiper-wrapper">

                @foreach (var item in ViewBag.SanPham)
                {
                    <div class="swiper-slide box">
                        <div class="icons">
                            <a href="#" class="fas fa-search"></a>
                            <a href="#" class="fas fa-heart"></a>
                            <a href="#" class="fas fa-eye"></a>
                        </div>
                        <div class="image">
                            <img src="/images/@item.ImageUrl" alt="">
                        </div>
                        <div class="content">
                            <h3>@item.Name</h3>
                            <div class="price">
                                <span style="color:red; font-size:20px">@String.Format("{0:0,0}", item.Price) VND</span>
                                <span style="text-decoration: line-through;">200.000 VND</span>
                            </div>
                            <a asp-controller="Shop" asp-action="Details" asp-route-sanphamId="@item.Id" class="btn" style="padding: 2rem 3rem;">thêm vào giỏ hàng</a>
                        </div>
                    </div>
                }
            </div>

            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>

        </div>

    </section>
	

	<script src="~/shop/js/jquery-1.11.0.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/~/shop/js/bootstrap.bundle.min.js"
			integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
			crossorigin="anonymous"></script>
	<script src="~/shop/js/plugins.js"></script>
	<script src="~/shop/js/script.js"></script>


</body>

</html>