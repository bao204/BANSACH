@{
    Layout = null; // Loại bỏ Layout cho trang này
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="description" content="Male_Fashion Template">
    <meta name="keywords" content="Male_Fashion, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0-beta3/css/all.min.css" integrity="sha512-p2HFnJNDRkQVNtrwFi2F+6M0b9u3M1OcvyOwLHMGUitVnw8eok/7p73zhMSSRGyEC+8A8kNcTSvft+XNmuqM/XA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    .con1 {
        display: flex;
        height: 100vh;
        background: #f0f0f0;
    }

    /* Menu bên trái */
    .sidebar {
        width: 230px; /* Điều chỉnh độ rộng của sidebar */
        background: #333;
        color: #fff;
        display: flex;
        flex-direction: column;
    }

        .sidebar ul li.active a {
            background: #00FF00;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

            .sidebar ul li {
                margin: 10px 0;
            }

                .sidebar ul li a {
                    text-decoration: none;
                    color: #fff;
                    display: flex;
                    align-items: center;
                    padding: 10px;
                    transition: background 0.3s;
                }

                    .sidebar ul li a i {
                        margin-right: 10px; /* Khoảng cách giữa icon và văn bản */
                    }

                    .sidebar ul li a:hover {
                        background: #555;
                    }

    /* iframe bên phải */
    .iframe-container {
        flex: 1;
        padding: 20px;
        background: #fff;
        overflow-y: auto;
    }

    /* Icon style */
    .icon {
        margin-right: 10px;
    }

    .AdminHeader {
        display: flex;
        align-items: center;
    }

        .AdminHeader img {
            margin-right: 10px; 
            width: 240px;
        }

        .AdminHeader h2 {
            text-align: center;
            flex: 1; 
        }
</style>


<div class="container-fuild con1">
    <!-- Menu bên trái -->
    <div class="sidebar">
        <ul>
            <li><a href="/Admin/SanPham/Index" target="iframe"><i class="fas fa-box icon"></i> Quản Lý Sản Phẩm</a></li>
            <li><a href="/Admin/TheLoai/Index" target="iframe"><i class="fas fa-tags icon"></i> Quản Lý Thể Loại</a></li>
            <li><a href="/Admin/NhaCungCap/Index" target="iframe"><i class="fas fa-building icon"></i> Quản Lý Nhà Cung Cấp</a></li>
            <li><a href="/Admin/BlogAdmin/Index" target="iframe"><i class="fas fa-blog icon"></i> Quản Lý Blog</a></li>
            <li><a href="/Admin/DonHang/Index" target="iframe"><i class="fas fa-shopping-cart icon"></i> Quản Lý Đơn Hàng</a></li>
        </ul>
    </div>

    <!-- iframe bên phải -->
    <div class="iframe-container">
        <iframe id="myIframe" name="iframe" style="width: 100%; height: 100%; border: none;" src="/Admin/SanPham/Index"></iframe>
    </div>
</div>

<script>
    // Chờ cho tài liệu HTML hoàn thành tải trước khi thực hiện mã JavaScript
    document.addEventListener("DOMContentLoaded", function () {
        var sidebarItems = document.querySelectorAll(".sidebar ul li");

        // Lặp qua danh sách các mục và thêm sự kiện click
        for (var i = 0; i < sidebarItems.length; i++) {
            sidebarItems[i].addEventListener("click", function (event) {
                // Xóa lớp "active" từ tất cả các mục
                for (var j = 0; j < sidebarItems.length; j++) {
                    sidebarItems[j].classList.remove("active");
                }

                // Thêm lớp "active" vào mục đã chọn
                event.currentTarget.classList.add("active");
            });
        }
    });
</script>


