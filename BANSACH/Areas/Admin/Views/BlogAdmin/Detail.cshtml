@model Blog
<style>
    header {
        display: none;
    }

    .footer {
        display: none;
    }

</style>
<partial name="_LoginPartial" />
<h1 style="text-align:center; margin-top:20px">ADMIN DASHBOARD</h1>

<h2>Blog Details</h2>

<div style="font-size:16px">
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Model.Author
        </dd>
        <dt class="col-sm-2">
            Created Date
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedDate
        </dd>
    </dl>
</div>
<div>
    <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Title" />
</div>
<p>
    @Model.Content
</p>
<a asp-controller="BlogAdmin" asp-action="Index" class="btn btn-primary">Back to Index</a>
