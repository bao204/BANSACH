<style>
    /* Style for the shopping cart table */
    .shoping__cart__table table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    .shoping__cart__table th,
    .shoping__cart__table td {
        border: 1px solid #e1e1e1;
        padding: 15px;
        text-align: center;
    }

    .shoping__cart__table th {
        background-color: #f5f5f5;
    }

    .shoping__cart__table img {
        max-width: 100%;
        height: auto;
    }

    /* Style for the quantity input and buttons */
    .quantity {
        display: flex;
        align-items: center;
    }

    .TANGGIAM a {
        cursor: pointer;
        margin: 0 5px;
        font-size: 18px;
        line-height: 1;
        text-align: center;
        text-decoration: none;
        color: #333;
    }

    .TANGGIAM input {
        border: 1px solid #ccc;
        border-radius: 4px;
        width: 30px;
        text-align: center;
    }

    /* Style for the discount code section */
    .shoping__discount {
        margin-bottom: 30px;
    }

        .shoping__discount input {
            width: 70%;
            padding: 10px;
            margin-right: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            outline: none;
        }

        .shoping__discount button {
            padding: 10px 15px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .shoping__discount button:hover {
                background-color: #45a049;
            }

    /* Style for the cart total section */
    .shoping__checkout ul {
        list-style: none;
        padding: 0;
    }

    .shoping__checkout li {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
    }

    /* Style for the continue shopping and update cart buttons */
    .shoping__cart__btns {
        margin-top: 20px;
        display: flex;
        justify-content: space-between;
    }

    .cart-btn {
        display: inline-block;
        padding: 10px 20px;
        background-color: #4CAF50;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s;
    }

        .cart-btn:hover {
            background-color: #45a049;
        }

    .cart-btn-right {
        background-color: #333;
    }

    .shoping__continue {
        margin-top: 20px;
        padding: 20px;
        background-color: #f9f9f9;
        border: 1px solid #e1e1e1;
        border-radius: 4px;
    }

    .shoping__discount h5 {
        color: #333;
        font-size: 18px;
        margin-bottom: 15px;
    }

    .shoping__discount form {
        display: flex;
        align-items: center;
    }

    .shoping__discount input {
        flex: 1;
        padding: 10px;
        margin-right: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        outline: none;
    }

    .shoping__discount button {
        padding: 10px 15px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .shoping__discount button:hover {
            background-color: #45a049;
        }

    .shoping__checkout {
        padding: 20px;
        background-color: #f9f9f9;
        border: 1px solid #e1e1e1;
        border-radius: 4px;
        margin-top: 20px;
    }

        .shoping__checkout h5 {
            color: #333;
            font-size: 18px;
            margin-bottom: 15px;
        }

        .shoping__checkout ul {
            list-style: none;
            padding: 0;
        }

        .shoping__checkout li {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
            color: #555;
            font-size: 16px;
        }

        .shoping__checkout a {
            display: inline-block;
            padding: 15px 30px;
            background-color: #4CAF50;
            color: white;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

            .shoping__checkout a:hover {
                background-color: #45a049;
            }
</style>

