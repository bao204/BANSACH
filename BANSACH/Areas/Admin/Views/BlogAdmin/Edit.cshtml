@model Blog
<style>
    header {
        display: none;
    }

    .footer {
        display: none;
    }

</style>
<partial name="_LoginPartial" />
<h1 style="text-align:center; margin-top:20px">ADMIN DASHBOARD</h1>

<div class="container" style="font-size:16px">
    <h2>Edit Blog</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label for="Title">Title:</label>
            <input type="text" class="form-control" asp-for="Title" required>
        </div>

        <div class="form-group">
            <label for="Author">Author:</label>
            <input type="text" class="form-control" asp-for="Author" required>
        </div>

        <div class="form-group">
            <label for="CreatedDate">Created Date:</label>
            <input type="date" class="form-control" asp-for="CreatedDate" required>
        </div>

        <div class="form-group">
            <label for="ImageFile">Image:</label>
            <input type="file" class="form-control-file" id="ImageFile" name="NewImageFile" accept=".jpg, .jpeg, .png">
        </div>

        <div class="form-group">
            <label for="Content">Content:</label>
            <textarea class="form-control" asp-for="Content" required rows="6"></textarea>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
    <br />
    <a asp-controller="BlogAdmin" asp-action="Index" class="btn btn-danger">Back to List</a>
</div>
